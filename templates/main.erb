@version: <%= @version %>

options {
        chain_hostnames(0);
        time_reopen    (10);
        time_reap      (360);
        log_fifo_size  (4096);
        create_dirs    (yes);
        group          (adm);
        perm           (<%= @perm %>);
        dir_perm       (<%= @dir_perm %>);
        use_dns        (<% if @use_dns  %>yes<% else %>no<% end %>);
        use_fqdn       (<% if @use_fqdn %>yes<% else %>no<% end %>);
        stats_freq     (0);
        bad_hostname   ("^gconfd$");
        frac_digits    (<%= @frac_digits %>);
        keep_timestamp (<%= @keep_timestamp %>);
};

